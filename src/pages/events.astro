<DefaultLayout>
  <section class="py-16 bg-[#f8f5f2] flex-1">
    <div class="container mx-auto px-4 md:px-8">
      <div class="mb-12 text-center">
        <h1
          class="text-4xl md:text-6xl font-bold text-[#402818] font-gochi-hand mb-4"
        >
          Our Events
        </h1>
        <p class="text-lg text-gray-700 max-w-2xl mx-auto">
          Step into the world of KopiKopiKat - capturing moments, flavors, and
          the essence of our Malaysian-inspired coffee experience.
        </p>
      </div>

      <!-- Staggered Gallery Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          galleryImages.map((image, index) => (
            <div
              class={`relative overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all ${
                image.width === "full" ? "md:col-span-2" : ""
              }`}
            >
              <div class="relative group h-full">
                <img
                  src={image.image}
                  alt={image.title}
                  class="w-full h-full object-cover aspect-[4/3]"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex flex-col justify-end p-6">
                  <h3 class="text-xl font-semibold text-white mb-2">
                    {image.title}
                  </h3>
                  <p class="text-gray-200 text-sm">{image.description}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <!-- Call to Action -->
