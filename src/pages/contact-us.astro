---
import DefaultLayout from "../layouts/default/default-layout.astro";

// Check if the 'sent' parameter is present in the URL
const url = new URL(Astro.request.url);
const messageSent = url.searchParams.has("sent");
---

<DefaultLayout>
  <!-- Success Message (shown when sent parameter is present) -->
  {
    messageSent && (
      <section class="bg-green-50 border-l-4 border-green-400 p-4">
        <div class="container mx-auto px-4 md:px-8">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg
                class="h-5 w-5 text-green-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-green-700 font-medium">
                Thank you for your message! We've received your inquiry and will
                get back to you soon.
              </p>
            </div>
          </div>
        </div>
      </section>
    )
  }

  <!-- Hero Section -->
  <section class="bg-[#efefef] py-12 md:py-16">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1
          class="text-4xl md:text-5xl font-bold text-[#402818] mb-4 font-gochi-hand"
        >
          Contact Us
        </h1>
        <p class="text-lg text-gray-700 mb-8">
          Have questions, feedback, or just want to say hello? We'd love to hear
          from you!
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4 md:px-8">
      <div class="flex flex-col md:flex-row gap-8 md:gap-12">
        <!-- Contact Information -->
        <div class="w-full md:w-1/3">
          <h2 class="text-2xl font-bold text-[#402818] mb-6">Get In Touch</h2>

          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-[#8b6747] p-3 rounded-full mr-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-white"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-[#402818]">Phone</h3>
                <p class="text-gray-700">+60 17-8200519</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-[#8b6747] p-3 rounded-full mr-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-white"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-[#402818]">Email</h3>
                <p class="text-gray-700">enquiries@segarnusantara.my</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-[#8b6747] p-3 rounded-full mr-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-white"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-medium text-[#402818]">Location</h3>
                <p class="text-gray-700">Level 9, Menara Summit,</p>
                <p class="text-gray-700">Kuala Lumpur, Malaysia</p>
                <p class="text-gray-700">UEP , 47600 Subang Jaya,</p>
                <p class="text-gray-700">Selangor</p>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <h3 class="text-lg font-medium text-[#402818] mb-3">Follow Us</h3>
            <div class="flex space-x-4">
              <a
                href="https://www.instagram.com/kopikopikat"
                class="bg-[#402818] p-3 rounded-full text-white hover:bg-[#8b6747] transition-colors"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="w-full md:w-2/3 bg-[#f8f5f2] p-6 md:p-8 rounded-lg">
          <h2 class="text-2xl font-bold text-[#402818] mb-6">
            Send Us a Message
          </h2>

          <form
            class="space-y-6"
            action="https://formie.dev/form/1b37ae7f-e951-4aab-9bfd-cda26eb4bd17?redirect_to=/contact-us?sent=true"
            method="POST"
          >
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="name"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Name</label
                >
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#8b6747]"
                  placeholder="Your name"
                  required
                />
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Email</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#8b6747]"
                  placeholder="Your email"
                  required
                />
              </div>
            </div>

            <div>
              <label
                for="subject"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Subject</label
              >
              <input
                type="text"
                id="subject"
                name="subject"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#8b6747]"
                placeholder="Subject"
                required
              />
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Message</label
              >
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#8b6747]"
                placeholder="Your message"
                required></textarea>
            </div>

            <div>
              <button
                type="submit"
                id="submit-btn"
                class="w-full bg-[#8b6747] text-white py-3 px-6 rounded-md hover:bg-[#402818] transition-colors font-medium disabled:opacity-50 disabled:cursor-not-allowed"
              >
                <span id="btn-text">Send Message</span>
                <span id="btn-loading" class="hidden">
                  <svg
                    class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                  >
                    <circle
                      class="opacity-25"
                      cx="12"
                      cy="12"
                      r="10"
                      stroke="currentColor"
                      stroke-width="4"></circle>
                    <path
                      class="opacity-75"
                      fill="currentColor"
                      d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                    ></path>
                  </svg>
                  Sending...
                </span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Wholesale Partnership Section -->
  <section class="mt-12 bg-[#F0F1F0] h-auto md:h-[600px]">
    <div class="h-full">
      <div class="flex flex-col md:flex-row h-full">
        <!-- Left image section -->
        <div class="w-full md:w-1/2 h-full">
          <div class="h-full w-full overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1665072204431-b3ba11bd6d06?q=80&w=1738&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
              alt="Wholesale coffee products"
              class="w-full h-full object-cover"
            />
          </div>
        </div>

        <!-- Right content section -->
        <div class="w-full md:w-1/2 py-12 h-full px-8">
          <div class="max-w-xl mx-auto text-center md:text-left">
            <h2
              class="text-3xl md:text-4xl font-bold text-[#402818] mb-4 font-gochi-hand text-center"
            >
              Wholesale and Partnership Opportunities
            </h2>
            <p class="text-lg text-gray-700 mb-8">
              Looking for high-quality canned drinks for your business? Whether
              you're a café, restaurant, distributor, or retailer, we offer
              wholesale pricing and custom collaboration opportunities to help
              you grow your business with our premium beverages.
            </p>
          </div>

          <div class="mt-8">
            <h3 class="text-2xl font-bold text-[#402818] mb-6 text-center">
              Why Partner With Us?
            </h3>
            <div class="max-w-xl mx-auto space-y-4">
              <div class="flex items-start">
                <p class="text-lg text-gray-700">
                  <span class="font-semibold"
                    >✅ Competitive Wholesale Pricing</span
                  > – Get the best deals when you buy in bulk.
                </p>
              </div>

              <div class="flex items-start">
                <p class="text-lg text-gray-700">
                  <span class="font-semibold"
                    >✅ Reliable Supply & Logistics</span
                  > – Consistent stock availability and efficient delivery.
                </p>
              </div>

              <div class="flex items-start">
                <p class="text-lg text-gray-700">
                  <span class="font-semibold"
                    >✅ Exclusive Collaboration Opportunities</span
                  > – We love working with like-minded brands to create unique drink
                  experiences.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector("form");
    const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
    const btnText = document.getElementById("btn-text");
    const btnLoading = document.getElementById("btn-loading");

    if (form && submitBtn && btnText && btnLoading) {
      form.addEventListener("submit", function () {
        // Disable the button
        submitBtn.disabled = true;

        // Hide normal text and show loading state
        btnText.classList.add("hidden");
        btnLoading.classList.remove("hidden");
      });
    }
  });
</script>
